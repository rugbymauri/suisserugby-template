<INCLUDE_TYPOSCRIPT: source="FILE:EXT:bootstrap_package/Configuration/TypoScript/constants.typoscript">


############
### PAGE ###
############
page {
    logo {
        file = EXT:suisse_rugby/Resources/Public/Images/logo.png
        fileInverted = EXT:suisse_rugby/Resources/Public/Images/logo.png
        height = 117
        width = 250
        alt = Suisse Rugby
        linktitle = Suisse Rugby
    }
    favicon {
        file = EXT:suisse_rugby/Resources/Public/Icons/favicon.ico
    }
    fluidtemplate {
        layoutRootPath = EXT:suisse_rugby/Resources/Private/Layouts/Page/
        partialRootPath = EXT:suisse_rugby/Resources/Private/Partials/Page/
        templateRootPath = EXT:suisse_rugby/Resources/Private/Templates/Page/
    }
    theme {
        language.languageValue = 1,2,3
        language.enable = 0
        copyright.enable = 0
        socialmedia {
            channels {
                facebook.url = https://www.facebook.com/SwissRugbyUnion
                twitter.url = https://twitter.com/SwissRugbyUnion
                instagram.url = https://www.instagram.com/suisse_rugby/
                youtube.url = https://www.youtube.com/channel/UCIHtLm65sFLPBwzB-yaro4Q
            }
        }
    }

}


##################
### EXTENSIONS ###
##################
plugin.bootstrap_package {
    view {
        layoutRootPath = EXT:suisse_rugby/Resources/Private/Layouts/
        partialRootPath = EXT:suisse_rugby/Resources/Private/Partials/
        templateRootPath = EXT:suisse_rugby/Resources/Private/Templates/
    }
}


########################
### CONTENT ELEMENTS ###
########################
plugin.bootstrap_package_contentelements {
    view {
        layoutRootPath = EXT:suisse_rugby/Resources/Private/Layouts/ContentElements/
        partialRootPath = EXT:suisse_rugby/Resources/Private/Partials/ContentElements/
        templateRootPath = EXT:suisse_rugby/Resources/Private/Templates/ContentElements/
    }
}


################################
### BOOTSTRAP SCSS CONSTANTS ###
################################
plugin.bootstrap_package.settings.scss {
    red = #c8102e
    primary = #eb3e4a
    secondary = #013859
    breadcrumb-bg = $red
    breadcrumb-active-color = $white
    breadcrumb-divider-color = $gray-300
    breadcrumb-divider = quote("|")
}



